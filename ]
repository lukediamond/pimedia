            <input id="file" name="file" onchange="upload()" accept=".mp3,.wav,.ogg,.flac" type="file"></input>
            <label for="file">Upload...</label>
        </form>
        <h3 id="nowplaying"></h3>
        <ul id="songlist">
        </ul>
        <div id="controls">
            <input onmousedown="seeking=true;" ontouchbegin="seeking=true;" onmouseup="seek(event)" ontouchend="seek(event)" id="progress" type="range" min="0" max="100" value="0"></input>
            <div id="controlsinner">
                <p id="elapsed" class="time"></p>
                <div>
                    <button class="control" id="pause" onclick="pause()"><img class="icon" src="play.svg"></img></button>
                    <button class="control" id="resume" onclick="resume()"><img class="icon" src="pause.svg"></img></button>
                </div>
                <div style="display: block; width: 100%; height: 0px;"></div>
